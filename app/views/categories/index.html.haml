.container-md-12
  .row
    .col-md-11.text-left
      %h3.text-left Categories 
      %table
        -  @categories.each do |category| 
          %tr 
            %td.col-md-8
              = link_to category.name, category
            %td
              = link_to "Show detail", category_path(category), class: 'btn btn-info btn-xs'
            %td              
              = link_to "Update", edit_category_path(category), class: 'btn btn-primary btn-xs'
            %td              
              = link_to "Delete", category_path(category), :data => { confirm: "Are you sure?" }, method: :delete, :class => 'btn btn-danger btn-xs'
